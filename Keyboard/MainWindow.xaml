<Window x:Class="Keyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keyboard"
        mc:Ignorable="d"
        Title="MainWindow" Height="798.4" Width="1679.6">
    <Grid Name="mainGrid" Canvas.Left="0" Canvas.Top="0" Margin="0,0,30.6,-0.2">
        <Canvas x:Name="configCanvas" HorizontalAlignment="Left" Height="318" Margin="1239,48,0,0" VerticalAlignment="Top" Width="195" MouseDown="configCanvas_MouseDown" PreviewKeyDown="configCanvas_PreviewKeyDown">
            <Button x:Name="practiceButton" Content="Button" Canvas.Left="61" Canvas.Top="53" Width="75" Click="practiceButton_Click"/>
            <CheckBox x:Name="showTaskCheckBox" Content="显示任务" Canvas.Left="68" Canvas.Top="122" Checked="showTaskCheckBox_Checked" Unchecked="showTaskCheckBox_Unchecked" IsChecked="True"/>
        </Canvas>
        <Canvas Name="softKeyboardCanvas" Height="428" Canvas.Top="526" PreviewTouchDown="softKeyboardCanvas_PreviewTouchDown" PreviewTouchUp="softKeyboardCanvas_PreviewTouchUp" PreviewMouseDown="softKeyboardCanvas_PreviewMouseDown" Canvas.Left="327" Margin="45,333,210,8"/>
        <Canvas Name="inputCanvas" HorizontalAlignment="Left" Height="279" Margin="10,10,0,0" VerticalAlignment="Top" Width="1220">
            <TextBox Name="inputTextBox" Height="66" Canvas.Left="110" TextWrapping="Wrap" Text="TextBox" Canvas.Top="92" Width="677" PreviewKeyDown="inputTextBox_PreviewKeyDown"/>
        </Canvas>
    </Grid>
</Window>
